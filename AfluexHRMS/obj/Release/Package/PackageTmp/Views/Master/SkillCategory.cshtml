@model AfluexHRMS.Models.Master

@{
    ViewBag.Title = "SkillCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("SkillCategory", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="main_content_iner ">
        <div class="container-fluid p-0 sm_padding_15px">
            <div class="row">

                <div class="col-12 col-lg-12 col-md-12">
                    <div class="dashboard_header white_card mb_50">
                        <div class="white_card_body py-2">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="dashboard_header_title">
                                        <h5 class="mb-0"> / Master / Skill Category</h5>
                                    </div>
                                </div>
                                @*<div class="col-lg-6">
                                    <div class="dashboard_breadcam text-end">
                                        <a href="/Master/SkillCategoryList" class="btn btn-success rounded-pill">Go to List</a>
                                    </div>
                                </div>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="container-fluid p-0">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="white_card card_height_100 mb_30">
                        <div class="white_card_header">
                            <div class="box_header m-0">
                                <div class="main-title">
                                    <h3 class="m-0">Skill Category</h3>
                                    <p style="color: #ff0000">
                                        @TempData["SkillCategorymsg"]
                                    </p>
                                    <p style="color: red">
                                        @TempData["ErrSkillCategorymsg"]
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="white_card_body">
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label"><h5>Skill Category Code <span class="text-danger">*</span></h5></label>
                                        @Html.TextBoxFor(m => m.SkillCategoryCode, new { @class = "form-control", @Placeholder = "Skill Category Code" })
                                        @Html.HiddenFor(m => m.PK_SkillCategoryID)
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label"><h5>Skill Category Name <span class="text-danger">*</span></h5></label>
                                        @Html.TextBoxFor(m => m.SkillCategoryName, new { @class = "form-control", @Placeholder = "Skill Category Name" })
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label" for="inputEmail4"><h5>Remark</h5></label>
                                        @Html.TextAreaFor(m => m.RemarkSkillCategory, new { @class = "form-control", @Placeholder = "Remark", @rows = "5", @cols = "10" })
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-3">
                                        @if (Model.PK_SkillCategoryID == null)
                                        {
                                            <input type="submit" class="btn btn-success" id="btnSave" onclick="return validateform();" name="btnSave" value="Save" />
                                        }
                                        else
                                        {

                                            <input type="submit" class="btn btn-success" onclick="return validateform();" id="btnUpdate" name="btnUpdate" value="Update" />
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

}

<script>
    function validateform() {
        $(".errortext").removeClass("errortext");
        if ($('#SkillCategoryCode').val() == '') {
            $("#SkillCategoryCode").addClass('errortext');
            $('#SkillCategoryCode').focus();
            return false;
        }

        if ($('#SkillCategoryName').val() == '') {
            $("#SkillCategoryName").addClass('errortext');
            $('#SkillCategoryName').focus();
            return false;
        }
        return true;
    }
</script>
<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #fff0f0 !important;
    }
</style>