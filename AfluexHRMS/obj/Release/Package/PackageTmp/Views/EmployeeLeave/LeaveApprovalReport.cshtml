@model AfluexHRMS.Models.Master

@{
    ViewBag.Title = "LeaveApprovalReport";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("LeaveApprovalReport", "EmployeeLeave", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data", @autocomplete = "off" }))
{
    <div class="main_content_iner ">
        <div class="container-fluid p-0 sm_padding_15px">
            <div class="row">

                <div class="col-12 col-lg-12 col-md-12">
                    <div class="dashboard_header white_card mb_50">
                        <div class="white_card_body py-2">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="dashboard_header_title">
                                        <h5 class="mb-0"> / Master / Leave Approval Report</h5>
                                    </div>
                                </div>
                                @*<div class="col-lg-6">
                                    <div class="dashboard_breadcam text-end">
                                        <a href="#" class="btn btn-success rounded-pill">Go to List</a>
                                    </div>
                                </div>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="container-fluid p-0">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="white_card card_height_100 mb_30">
                        <div class="white_card_header">
                            <div class="box_header m-0">
                                <div class="main-title">
                                    <h3 class="m-0">Leave Approval Report</h3>
                                    @*<p style="color: #ff0000">
                                        @TempData["Salary"]
                                    </p>
                                    <p style="color: red">
                                        @TempData["ErrSalary"]
                                    </p>*@
                                </div>
                            </div>
                        </div>
                        <div class="white_card_body">
                            <div class="card-body">

                                <div class="row mb-3">
                                    <div class="col-md-3">
                                        <label class="form-label" for="inputEmail4"><h5>Employee Name </h5></label>
                                        @Html.TextBoxFor(m => m.EmployeeName, new { @class = "form-control", @Placeholder = "Employee Name" })
                                    </div>

                                    <div class="col-md-3">
                                        <label class="form-label" for="inputEmail4"><h5>Employee Code </h5></label>
                                        @Html.TextBoxFor(m => m.EmployeeCode, new { @class = "form-control", @Placeholder = "Employee Code" })
                                    </div>

                                    <div class="col-md-3 mt-4">
                                        <input type="submit" name="Search" id="Search" value="Search" class="btn btn-success" style="margin-top:20px"/>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="box_body p-4">
                                        <div class="table-responsive">
                                            <div class="QA_table mb_30">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th>SNo.</th>
                                                            <th>Employee Name</th>
                                                            <th>Employee Code</th>
                                                            <th>Leave Name</th>
                                                            <th>Applied For Days</th>
                                                            <th>From Date</th>
                                                            <th>To Date</th>
                                                            <th>Status</th>
                                                            <th>Reason For Leave</th>
                                                            <th>Remark</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @if (Model != null)
                                                        {
                                                            if (Model.lstList != null)
                                                            {
                                                                int i = 1;
                                                                foreach (var Item in Model.lstList)
                                                                {
                                                                    <tr class="text-left">
                                                                        <td>@i</td>
                                                                        <td>@Item.EmployeeName</td>
                                                                        <td>@Item.EmployeeCode</td>
                                                                        <td>@Item.LeaveName</td>
                                                                        <td>@Item.UsedLeave</td>
                                                                        <td>@Item.FromDate</td>
                                                                        <td>@Item.ToDate</td>
                                                                        <td>@Item.Status</td>
                                                                        <td>@Item.Remark</td>

                                                                    </tr>
                                                                    i++;
                                                                }
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="txtremark" />
    <input type="hidden" id="txtdays" />
}

