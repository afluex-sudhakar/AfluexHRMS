    <script>
        $(document).on({
            ajaxStart: function () {
                debugger;
                $("body").addClass("loading");
            },
            ajaxStop: function () {
                debugger;
                $("body").removeClass("loading");
            }
        });

        function ActivateNow() {
            debugger;
            $("#preloader").css({ 'display': 'none' });
            if ($('#Code').val() == '') {
                alert("NFC Code required");
                return false;
            }
            debugger
            ActivationCode = $("#txtActivationCode").val()
            if ($("#hdfAlloted").val() == "true") {
                if ($('#txtActivationCode').val() == '') {
                    alert("Coupon Code required");
                    return false;
                }

            }
            if ($("#hdfAlloted").val() == "false") {
                ActivationCode = 'ManualPurchase';
                if ($('#txtDistributorCode').val() == '') {
                    alert("Distributor Code required.");
                    return false;
                }
            }
            $.ajax({
                url: '/Home/ActivateNFC?NFCCode=' + $("#Code").val() + '&ActivationCode=' + ActivationCode,
                method: "POST",
                success: function (result) {
                    debugger;
                    if (result == "NFC Code Activated successfully") {
                        debugger;
                        alert("Your NFC Device is successfully activated. Please manage here.");
                        window.location.href = "/NFCProfile/SetActionDashboard";
                    }
                    else {
                        alert(result);
                    }
                },
                error: function () {
                    alert("Error while processing request");
                },
                beforeSend: function () {
                    $("#imgSpinner1").show();
                },
                complete: function () {
                    $("#imgSpinner1").hide();
                },
            });
        };
    </script>
