@model AfluexHRMS.Models.EmployeeAttendance

@{
    ViewBag.Title = "DateWiseAttendanceReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("DateWiseAttendanceReport", "EmployeeLogin", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data", @autocomplete = "off" }))
{

        


        <div class="container-fluid">
            <div class="row page-titles">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Attendance</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Date Wise Attendance Report</a></li>
                </ol>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header d-lg-flex justify-content-between">
                            <h4 class="card-title">Date Wise Attendance Report</h4>
                            <p style="color: #ff0000">
                                @*@TempData["Salary"]*@
                            </p>
                        </div>
                        <div class="card-body">

                            <div class="row mb-3">
                                <div class="col-md-3">
                                    <label class="form-label" for="inputEmail4"><h5>IS Half Day </h5></label>
                                    @Html.DropDownListFor(m => m.ISHalfDay, new SelectList(ViewBag.ISHalfFullDay, "Value", "Text"), new { @class = "form-control default-select" })
                                </div>

                                <div class="col-md-3">
                                    <label class="form-label" for="inputEmail4"><h5>Attendance </h5></label>
                                    @Html.DropDownListFor(m => m.Attendance, new SelectList(ViewBag.AttendType, "Value", "Text"), new { @class = "form-control default-select" })
                                </div>

                                <div class="col-md-3">
                                    <label class="form-label" for="inputEmail4"><h5>From Date   </h5></label>
                                    @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "FromDate", @readonly = "readonly" })
                                </div>

                                <div class="col-md-3">
                                    <label class="form-label" for="inputEmail4"><h5>To Date   </h5></label>
                                    @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "ToDate", @readonly = "readonly" })
                                </div>


                                <div class="col-md-3 mt-4">
                                    <input type="submit" name="Search" id="Search" value="Search" class="btn btn-success" onclick="return ValidateForm();" />
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-lg-12">
                                <div class="box_body p-4">
                                    <div class="table-responsive">
                                        <div class="QA_table mb_30">
                                            <table class="table display" id="example">
                                                <thead>
                                                    <tr>
                                                        <th>SNo.</th>
                                                        <th>Attendance Date</th>
                                                        <th>Status</th>
                                                        <th>Half/Full Day</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model != null)
                                                    {
                                                        if (Model.lstList != null)
                                                        {
                                                            int i = 1;
                                                            foreach (var Item in Model.lstList)
                                                            {
                                                                <tr class="text-left">
                                                                    <td>@i</td>
                                                                    <td>@Item.AttendanceDate</td>
                                                                    <td>@Item.Attendance</td>
                                                                    <td>@Item.ISHalfDay</td>
                                                                </tr>

                                                                i++;
                                                            }
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                            </div>
                        </div>
                    </div>
                </div>
           
}


<script src="~/assets/js/jquery1-3.4.1.min.js"></script>
<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">


<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });


</script>
