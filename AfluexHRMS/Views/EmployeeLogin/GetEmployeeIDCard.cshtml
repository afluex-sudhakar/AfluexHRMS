            <div class="card">
                <div class="card-body">
                    <div class="row mt-4" id="Details1">
                        <!-- ROW-4 OPEN -->
                        <div class="row">

                            @if (Model != null)
                {
                    if (Model.lstGetIDCard != null)
                    {
