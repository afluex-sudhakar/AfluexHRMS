@model AfluexHRMS.Models.EmployeeLogin

@{
    ViewBag.Title = "GetEmployeeIDCard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    @@media print {
        #btn_print {
            display: none;
        }

        .printdivss {
            display: none;
        }

        #back-to-top {
            display: none;
        }
    }
</style>

@using (Html.BeginForm("GetEmployeeIDCard", "EmployeeLogin", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data", @autocomplete = "off" }))
{
