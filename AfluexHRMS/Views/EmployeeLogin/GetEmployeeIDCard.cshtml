                                                    <path class='deco-layer deco-layer--4' d='M-34.667,62.998c0,0,56-45.667,120.316-27.839C167.484,57.842,197,41.332,232.286,30.428
											c53.07-16.399,104.047,36.903,104.047,36.903l1.333,36.667l-372-2.954L-34.667,62.998z' fill='#FFFFFF'></path>
										</svg>
                                                </div>
                                                <div class="br-br-0 br-bl-0 bg-white mt-0 shadow text-center">
                                                    <ul class="list-group list-group-flush text-center">
                                                        <li class="list-group-item">
                                                            <b>Company Address : </b><br /> @item.CompanyAddress
                                                        </li>
                                                        @*<li class="list-group-item"><b>Blood Groop : </b>A+</li>*@
                                                        <li class="list-group-item" style="margin-top: 5px;"><b>Company No. :</b><br /> +91 @item.CompanyContact</li>
                                                        <li class="list-group-item border-bottom-0"><b></b></li>
                                                        <li class="list-group-item border-bottom-0"><b></b></li>
                                                        <li class="list-group-item border-bottom-0" style="margin-top: 104px;"><b>If found, please email at hr@afluex.com</b></li>
                                                    </ul>
                                                    <div class="card-footer text-white" style="background-color: #05576e; padding:8px;">
                                                        @item.CompanyName
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        i++;
                                    }
                                }
                                <div class="col-sm-6 col-xl-4 primary printdivss">
                                    <div class="princing-item mb-4">
                                        <div class="">
                                            <div class="col-md-2">
                                                <a class="btn btn-sm btn-primary pull-right" onclick="window.print();" id="btn_print" style="font-size:1.65rem;"><i class="fa fa-cloud-download"></i></a>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div><!-- COL-END -->
                </div>
            </div>
        </div>
    </div>

}
<script>
                    function validateformSearch() {
                        $(".errortext").removeClass("errortext");
                        if ($('#EmployeeCode').val() == '') {
                            alert("Please fill Employee Code.")
                            return false;
                        }
                        return true;
                    }
</script>

