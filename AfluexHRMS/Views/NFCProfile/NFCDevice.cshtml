@model AfluexHRMS.Models.Master

@{
    ViewBag.Title = "NFCDevice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="page-header">
        <div>
            <h1 class="page-title">NFC Device</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">NFC</a></li>
                <li class="breadcrumb-item active" aria-current="page">Add NFC Device</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-6 col-xl-4">
                    <div class="card bg-primary img-card box-primary-shadow">
                        <div class="card-body">
                            <div class="d-flex">
                                <div class="text-white">
                                    <h2 class="number-font">Business Card</h2>
                                    <a class="text-white btn btn-success mb-0"  data-bs-toggle="modal" data-bs-target="#exampleModalCenter">Activate </a>
                                </div>
                                <div class="ms-auto"> <i class="fa fa-credit-card-alt text-white fs-30 me-2 mt-2"></i> </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModalCenter">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Business Card</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="form-row ">
                    <div class="col-xl-6 col-lg-6 form-group">
                        <div class="mb-1">
                            <label>I already have a card</label>
                            @if (Session["UserNFCCode"].ToString() != "" && Session["UserNFCCode"].ToString() != null && Session["UserNFCCode"].ToString() != "na")
                            {
                                <a href="/nfc/Profile?id=@Session["UserNFCCode"].ToString()" class="btn btn-primary">Go</a>
                            }
                            else
                            {
                                <a href="/Home/NFCActivation" class="btn btn-primary">Go</a>
                            }
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger light" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>