@model AfluexHRMS.Models.Master

@{
    ViewBag.Title = "CompanyList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("CompanyList", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="main_content_iner ">
        <div class="container-fluid p-0 sm_padding_15px">
            <div class="row">
                <div class="col-12 col-lg-12 col-md-12">
                    <div class="dashboard_header white_card mb_50">
                        <div class="white_card_body py-2">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="dashboard_header_title">
                                        <h5 class="mb-0"> / Master / Company List</h5>
                                    </div>
                                </div>
                                @*<div class="col-lg-6">
                                    <div class="dashboard_breadcam text-end">
                                        <a href="/Master/CompanyMaster" class="btn btn-success rounded-pill">Add New</a>
                                    </div>
                                </div>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid p-0">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="white_card card_height_100 mb_30">
                        <div class="white_card_header">
                            <div class="box_header m-0">
                                <div class="main-title">
                                </div>
                            </div>
                        </div>
                        <div class="white_card_body">
                            <div class="QA_section">
                                <div class="white_box_tittle list_header">
                                    <h4>Company List</h4>
                                    <p style="color: #ff0000">
                                        @TempData["Company"]
                                    </p>
                                    <p style="color: red">
                                        @TempData["ErrCompany"]
                                    </p>
                                    <div class="box_right d-flex lms_block">
                                        <div class="serach_field_2">
                                            <div class="search_inner">
                                                <form Active="#">
                                                    <div class="search_field">
                                                        <input type="text" placeholder="Search here...">
                                                    </div>
                                                    <button type="submit"> <i class="ti-search"></i> </button>
                                                </form>
                                            </div>
                                        </div>
                                       
                                    </div>
                                </div>
                                <div class="QA_table mb_30">

                                    <table class="table lms_table_active ">
                                        <thead>
                                            <tr>
                                                <th>SNo.</th>
                                                <th>Company Name</th>
                                                <th>Email</th>
                                                <th>Website</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                if (Model.lstList != null)
                                                {
                                                    int i = 1;
                                                    foreach (var Item in Model.lstList)
                                                    {
                                                        <tr class="text-left">
                                                            <td>@i</td>
                                                            <td>@Item.CompanyName</td>
                                                            <td>@Item.Email</td>
                                                            <td>@Item.Website</td>
                                                            <td>
                                                                <a href="/Master/CompanyMaster?CompanyID=@Item.CompanyID" class="btn btn-info btn-sm">Edit</a>
                                                                <a href="/Master/DeleteCompany?companyid=@Item.CompanyID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you wish to delete this Company details?');">Delete</a>
                                                            </td>

                                                        </tr>

                                                        i++;
                                                    }
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                </div>
            </div>
        </div>
    </div>
}

